        </div>

        <!-- Main Broadcast Stage -->
        <div class="broadcast-stage">
            <div class="video-placeholder" id="placeholder">
                <div class="placeholder-icon">ðŸŽ¥</div>
                <div>Click "Start Broadcast" to begin</div>
            </div>
            <video id="video" style="display: none;"></video>
            
            <!-- Recording Indicator -->
