                <span class="data-value" id="transcript">No audio detected yet...</span>
            </div>
            <div class="data-row">
                <span class="data-label">Analysis:</span>
                <span class="data-value" id="analysis">Waiting for data...</span>
            </div>
        </div>

        <!-- Control Panel -->
        <div class="control-panel">
            <button class="control-btn start-btn" id="start-btn">Start Broadcast</button>
            <button class="control-btn stop-btn" id="stop-btn" disabled>Stop Broadcast</button>
