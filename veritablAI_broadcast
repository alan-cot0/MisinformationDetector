    <script>
        let mediaRecorder;
        let stream;
        let ws;
        let isRecording = false;

        const video = document.getElementById('video');
        const placeholder = document.getElementById('placeholder');
        const startBtn = document.getElementById('start-btn');
        const stopBtn = document.getElementById('stop-btn');
        const recordingIndicator = document.getElementById('recording-indicator');
        const lowerThird = document.getElementById('lower-third');
        const statusEl = document.getElementById('status');
        const transcriptEl = document.getElementById('transcript');
        const analysisEl = document.getElementById('analysis');
        const tickerContent = document.getElementById('ticker-content');

        // Get supported MIME type
        function getSupportedMimeType() {
            const types = [
                'audio/webm',
                'audio/webm;codecs=opus',
                'audio/ogg;codecs=opus',
                'audio/mp4',
                'audio/mpeg'
            ];
            
            for (const type of types) {
                if (MediaRecorder.isTypeSupported(type)) {
                    return type;
                }
            }
            return ''; // Let browser choose default
        }

        // Start broadcast
        async function startBroadcast() {
            try {
                // Get media devices
                stream = await navigator.mediaDevices.getUserMedia({ 
                    video: true, 
                    audio: true 
                });

                // Setup video
                video.srcObject = stream;
                video.style.display = 'block';
                placeholder.style.display = 'none';

                // Create a separate audio-only stream for recording
                const audioStream = new MediaStream(stream.getAudioTracks());
                
                // Setup audio recording with supported MIME type
                const mimeType = getSupportedMimeType();
                const options = mimeType ? { mimeType } : {};
                
                try {
                    mediaRecorder = new MediaRecorder(audioStream, options);
                    console.log('Using MIME type:', mimeType || 'default');
                } catch (recorderError) {
                    // If specific MIME type fails, try without any options
                    console.log('Trying default recorder settings');
                    mediaRecorder = new MediaRecorder(audioStream);
                }

                // Setup WebSocket connection (replace with your endpoint)
                // ws = new WebSocket("ws://your-backend-url:8000/ws/audio");
                
                // Simulated WebSocket for demo
                // ws.onopen = () => {
                //     console.log("WebSocket connected");
                //     statusEl.textContent = "Connected - Broadcasting Live";
                // };

                // ws.onmessage = event => {
                //     const data = JSON.parse(event.data);
                //     transcriptEl.textContent = data.transcript || "Processing...";
                //     analysisEl.textContent = data.analysis || "Analyzing...";
                //     updateTicker(data.breaking_news);
                // };

                mediaRecorder.ondataavailable = event => {
                    if (event.data.size > 0) {
                        // Send to WebSocket when connected
                        // if (ws && ws.readyState === WebSocket.OPEN) {
                        //     event.data.arrayBuffer().then(buffer => ws.send(buffer));
                        // }
                    }
                };

                mediaRecorder.start(250);
                isRecording = true;

                // Update UI
                recordingIndicator.classList.add('active');
                lowerThird.classList.add('visible');
                startBtn.disabled = true;
                stopBtn.disabled = false;
                statusEl.textContent = "Live - Recording";

                // Demo: Simulate updates
                simulateUpdates();

            } catch (err) {
                alert('Error accessing camera/microphone: ' + err.message);
                statusEl.textContent = "Error: " + err.message;
            }
        }

        // Stop broadcast
        function stopBroadcast() {
            if (mediaRecorder && isRecording) {
                mediaRecorder.stop();
            }

            if (stream) {
                stream.getTracks().forEach(track => track.stop());
            }

            // if (ws) {
            //     ws.close();
            // }

            video.style.display = 'none';
            placeholder.style.display = 'flex';
            recordingIndicator.classList.remove('active');
            lowerThird.classList.remove('visible');
            
            startBtn.disabled = false;
            stopBtn.disabled = true;
            statusEl.textContent = "Stopped";
            isRecording = false;
        }

        // Update ticker with new content
        function updateTicker(content) {
            if (content) {
                tickerContent.innerHTML = `<span class="breaking-label">BREAKING NEWS</span>${content}`;
            }
        }

        // Simulate live updates for demo
        function simulateUpdates() {
            if (!isRecording) return;

            const demoTranscripts = [
                "Welcome to the live broadcast...",
                "We are now analyzing the audio in real-time...",
                "The system is detecting speech patterns...",
                "Processing natural language...",
                "Generating insights from the data..."
            ];

            const demoAnalysis = [
                "Confidence: 95%",
                "Sentiment: Neutral",
                "Key topics detected",
                "Analysis in progress",
                "Data validated"
            ];

            let index = 0;
            const interval = setInterval(() => {
                if (!isRecording) {
                    clearInterval(interval);
                    return;
                }

                transcriptEl.textContent = demoTranscripts[index % demoTranscripts.length];
                analysisEl.textContent = demoAnalysis[index % demoAnalysis.length];
                index++;

                // Update ticker occasionally
                if (index % 3 === 0) {
                    updateTicker(` Live update at ${new Date().toLocaleTimeString()} â€¢ System operational â€¢ ${index} updates processed`);
                }
            }, 3000);
        }

        // Event listeners
        startBtn.addEventListener('click', startBroadcast);
        stopBtn.addEventListener('click', stopBroadcast);

        // Show lower third after a delay when recording starts
        setTimeout(() => {
            if (isRecording) {
                lowerThird.classList.add('visible');
            }
        }, 2000);
    </script>
</body>
</html>
